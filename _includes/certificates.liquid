<div class="col">
  <a href="{% if certificate.redirect %} {{ certificate.redirect }} {% else %} {{ certificate.url|relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if certificate.img %}
        {%
          include figure.liquid
          loading="eager"
          path=certificate.img
          sizes = "250px"
          alt="certificate thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ certificate.title }}</h2>
        <p class="card-text">{{ certificate.description }}</p>
        <div class="row ml-1 mr-1 p-0"></div>
      </div>
    </div>
  </a>
</div>
